}

/* Affects the whole site. Please use only to put a cover background behind the main body of the site. */
.user-css-presentation { 
     background: url(urlhere) fixed no-repeat;
     background-size: cover;
     background-color: #00000000;
}

/* Sets the base look and feel for the main body of the site, where the front page, articles, categories */
/* etc are displayed. It's a good place to set your desired default values for basic text font and its color. */
.user-css-presentation .page { 
     background-image: url();
     background-color:  #00000000;
     border: var(--borderStandard);
     box-shadow: var(--shadowStandard);   
     font: var(--fontStandard);
     color: var(--colorStandard);
}

